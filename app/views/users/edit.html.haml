.row
  .col-sm-offset-4.col-md-4
    %h1.text-center= t("users.edit.title")

    = simple_form_for @user, url: user_path, wrapper: :horizontal_form,
      html: { class: "form-horizontal", role: "form" },
      method: :put do |f|
      = f.input :login, required: true, disabled: true
      = f.input :email, required: true, disabled: true
      .form-group
        .col-sm-offset-3.col-sm-9
          = f.button :submit, t("users.edit.action")

      = link_to t("users.shared.link_cancel"), user_path(@user)
